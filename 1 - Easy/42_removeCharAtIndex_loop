// create a function that removes the num index from a string
function removeChar(str, num) {
  let result = '';

  // loop through string; if current element ISN'T num, add to result
  for(let i = 0; i < str.length; i++){
    if(i !== num) {
      result += str[i];
    }
  }

  return result;
}

console.log(removeChar('kitten', 1));
console.log(removeChar('kitten', 0));
console.log(removeChar('kitten', 4));
