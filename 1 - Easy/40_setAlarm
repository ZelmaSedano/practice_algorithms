function setAlarm(employed, vacation) {
  if(employed && !vacation) {
    return true;
  } else {
    return false;
  }
}

// is a weekday and not on vacation
console.log('employed and not on vacation: ' + setAlarm(true, false));
// is on vacation 
console.log('on vacation: ' + setAlarm(true, true));
// it's the weekend
console.log('the weekend: ' + setAlarm(false,false));
