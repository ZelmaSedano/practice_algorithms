// set alarm - set alarm is it's a weekday and it's not the weekend
// write a function that returns TRUE IF WE SLEEP IN
function sleepIn(weekday, vacation) {
  if(!weekday || vacation) {
    return true;
  } else {
    return false;
  }
}

console.log(sleepIn(false, false)); // true
console.log(sleepIn(true, false)); // false
console.log(sleepIn(false, true)); // true;
